<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.Seat_reservation">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Info_Bus"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_background_ticket"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/brand_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Марка автобуса -"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Номер автобуса - "
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/free_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свободных мест - "
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BusesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_background_ticket"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/Bus_sel_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="выбрать место"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>