<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Серый прямоугольник с закругленными углами -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Белый прямоугольник с закругленными углами сверху -->
    <item android:right="0dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="19dp" android:topRightRadius="19dp" />
            <padding android:left="1dp" android:right="1dp" android:top="1dp" />
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
        </shape>
    </item>
</layer-list>
